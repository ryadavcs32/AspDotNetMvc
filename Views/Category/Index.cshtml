@model  IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"> <i class="bi bi-plus-square"></i> &nbsp; Create New Category</a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Cateroy Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
                
            </tr>
        }

    </tbody>
</table>

